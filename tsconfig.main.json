{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/electron",
    "rootDir": "electron",
    "noEmit": false,
    "isolatedModules": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "electron/**/*.ts",
    "electron/**/*.tsx"
  ],
  "exclude": []
}
