{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "electron",
        "renderer/src",
        "tsconfig.main.json"
    ]
}
